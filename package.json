{
  "name": "meu-pipeline-de-testes",
  "version": "1.0.0",
  "description": "Pipeline de testes com Playwright e Vitest",
  "scripts": {
    "lint": "npm run lint:ts && npm run lint:format",
    "lint:ts": "tsc -b jsconfig.json",
    "lint:format": "prettier --check --ignore-path .gitignore .",
    "test": "vitest run",
    "test:unit": "vitest run ./test",
    "e2e": "playwright test ./e2e",
    "install:playwright": "playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
